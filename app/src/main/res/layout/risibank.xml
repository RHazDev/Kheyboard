<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:id="@+id/layout">
    <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/spacebtn"
            android:background="@drawable/ic_space_bar" android:adjustViewBounds="true"
            app:layout_constraintStart_toEndOf="@+id/backspacebtn"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/returnbtn"
            app:layout_constraintTop_toTopOf="@+id/logo"/>
    <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/searchbtn"
            android:background="@drawable/ic_search" android:adjustViewBounds="true"
            app:layout_constraintStart_toEndOf="@+id/refreshbtn" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/logo"
            app:layout_constraintTop_toTopOf="@+id/logo"/>
    <android.inputmethodservice.KeyboardView android:layout_width="0dp" android:layout_height="0dp"
                                             android:visibility="invisible"
                                             app:layout_constraintStart_toStartOf="parent"
                                             app:layout_constraintTop_toTopOf="parent" android:id="@+id/keyboard"/>
    <ImageView
            android:layout_width="160dp"
            android:layout_height="30dp" app:srcCompat="@android:color/transparent"
            android:id="@+id/logo" android:background="@drawable/risibank"
            android:adjustViewBounds="true"
            app:layout_constraintStart_toEndOf="@+id/searchbtn" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/backspacebtn" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <android.support.v7.widget.RecyclerView
            android:clipToPadding="false"
            android:layout_width="0dp"
            android:layout_height="130dp" android:orientation="horizontal"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager" android:id="@+id/list"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/logo"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
    />
    <Button
            android:text="Nouveaux"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/nouveauxbtn"
            app:layout_constraintStart_toStartOf="parent" android:background="@android:color/transparent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/populairesbtn"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintTop_toBottomOf="@+id/list" android:layout_marginTop="8dp"/>
    <Button
            android:text="Populaires"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/populairesbtn"
            app:layout_constraintStart_toEndOf="@+id/nouveauxbtn"
            android:background="@android:color/transparent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/favorisbtn"
            app:layout_constraintTop_toBottomOf="@+id/list" android:layout_marginTop="8dp"/>
    <Button
            android:text="AlÃ©atoires"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/aleatoiresbtn"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@android:color/transparent" app:layout_constraintStart_toEndOf="@+id/favorisbtn"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintTop_toBottomOf="@+id/list"
            android:layout_marginTop="8dp"/>
    <Button
            android:text="Favoris"
            android:layout_height="wrap_content"
            android:id="@+id/favorisbtn"
            app:layout_constraintEnd_toStartOf="@+id/aleatoiresbtn"
            android:background="@android:color/transparent" app:layout_constraintStart_toEndOf="@+id/populairesbtn"
            app:layout_constraintHorizontal_bias="0.5" android:layout_width="0dp"
            app:layout_constraintTop_toBottomOf="@+id/list" android:layout_marginTop="8dp"/>
    <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/refreshbtn"
            android:background="@drawable/ic_refresh" android:adjustViewBounds="true"
            app:layout_constraintStart_toEndOf="@+id/addbtn" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/searchbtn"
            app:layout_constraintTop_toTopOf="@+id/logo"/>
    <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/backspacebtn"
            android:background="@drawable/ic_backspace" android:adjustViewBounds="true"
            app:layout_constraintStart_toEndOf="@+id/logo" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/spacebtn"
            app:layout_constraintTop_toTopOf="@+id/logo"/>
    <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/returnbtn"
            android:background="@drawable/ic_keyboard_return" android:adjustViewBounds="true"
            app:layout_constraintStart_toEndOf="@+id/spacebtn" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@+id/logo"/>
    <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/addbtn"
            android:background="@drawable/ic_add" android:adjustViewBounds="true"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/refreshbtn" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintTop_toTopOf="@+id/logo"/>
</android.support.constraint.ConstraintLayout>

