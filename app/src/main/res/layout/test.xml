<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Main">

    <TextView
            android:text="Et pour finir, essaie le"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hint"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:textSize="24sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.38"/>
    <ImageView
            android:layout_height="@android:dimen/thumbnail_height"
            app:srcCompat="@android:color/transparent"
            android:id="@+id/sticker"
            android:layout_width="@android:dimen/thumbnail_width"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.497" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/hint"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/input"
            app:layout_constraintStart_toStartOf="parent"
            android:inputType="textUri" android:singleLine="true"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/testbtn"/>
    <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp" app:srcCompat="@drawable/ic_send"
            android:id="@+id/testbtn"
            android:background="@android:color/transparent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp" android:tint="@color/colorAccent" android:adjustViewBounds="true"
            android:scaleType="fitCenter"/>
</android.support.constraint.ConstraintLayout>