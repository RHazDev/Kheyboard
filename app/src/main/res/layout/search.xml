<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/black"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Hack to make the layout fullscreen   -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swiper"
        android:layout_width="0dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_height="@dimen/height"
        app:layout_constrainedHeight="true"
        app:layout_constraintTop_toBottomOf="@id/appbar"
        app:layout_constraintBottom_toTopOf="@id/keybar1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/appbar"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:background="@drawable/shape_round"
            android:backgroundTint="@color/color_button_background"
            android:tint="@color/color_button_foreground"
            android:tooltipText="Retour"
            android:src="@drawable/ic_back"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constrainedWidth="true"
            android:src="@drawable/img_risibank"
            app:layout_constraintStart_toEndOf="@id/btn_back"
            app:layout_constraintEnd_toStartOf="@id/btn_expand" />

        <ImageButton
            android:id="@+id/btn_expand"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:background="@drawable/shape_round"
            android:backgroundTint="@color/color_button_background"
            android:tint="@color/color_button_foreground"
            android:tooltipText="Agrandir le clavier"
            android:src="@drawable/ic_expand_more"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appbar"
        app:layout_constraintBottom_toTopOf="@id/input" />

    <EditText
        android:id="@+id/input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:background="@drawable/shape_round"
        android:backgroundTint="@color/color_button_background"
        android:textColor="@color/color_button_foreground"
        app:layout_constraintTop_toBottomOf="@id/recycler"
        app:layout_constraintBottom_toTopOf="@id/keybar3"
        app:layout_constraintStart_toStartOf="@id/keybar3"
        app:layout_constraintEnd_toEndOf="@id/keybar3" />

    <LinearLayout
        android:id="@+id/keybar3"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/keybar2">

        <Button
            android:text="A"
            android:id="@+id/key_a"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:background="@drawable/shape_round"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:backgroundTint="@color/color_button_background"
            android:textColor="@color/color_button_foreground" />

        <Button
            android:text="Z"
            android:id="@+id/key_z"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:background="@drawable/shape_round"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:backgroundTint="@color/color_button_background"
            android:textColor="@color/color_button_foreground" />

        <Button
            android:text="E"
            android:id="@+id/key_e"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:background="@drawable/shape_round"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:backgroundTint="@color/color_button_background"
            android:textColor="@color/color_button_foreground" />

        <Button
            android:text="R"
            android:id="@+id/key_r"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:background="@drawable/shape_round"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:backgroundTint="@color/color_button_background"
            android:textColor="@color/color_button_foreground" />

        <Button
            android:text="T"
            android:id="@+id/key_t"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:background="@drawable/shape_round"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:backgroundTint="@color/color_button_background"
            android:textColor="@color/color_button_foreground" />

        <Button
            android:text="Y"
            android:id="@+id/key_y"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:background="@drawable/shape_round"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:backgroundTint="@color/color_button_background"
            android:textColor="@color/color_button_foreground" />

        <Button
            android:text="U"
            android:id="@+id/key_u"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:background="@drawable/shape_round"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:backgroundTint="@color/color_button_background"
            android:textColor="@color/color_button_foreground" />

        <Button
            android:text="I"
            android:id="@+id/key_i"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:background="@drawable/shape_round"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:backgroundTint="@color/color_button_background"
            android:textColor="@color/color_button_foreground" />

        <Button
            android:text="O"
            android:id="@+id/key_o"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:background="@drawable/shape_round"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:backgroundTint="@color/color_button_background"
            android:textColor="@color/color_button_foreground" />

        <Button
            android:text="P"
            android:id="@+id/key_p"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:background="@drawable/shape_round"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:backgroundTint="@color/color_button_background"
            android:textColor="@color/color_button_foreground" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/keybar2"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/keybar1">

        <Button
            android:text="Q"
            android:id="@+id/key_q"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:background="@drawable/shape_round"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:backgroundTint="@color/color_button_background"
            android:textColor="@color/color_button_foreground" />

        <Button
            android:text="S"
            android:id="@+id/key_s"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:background="@drawable/shape_round"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:backgroundTint="@color/color_button_background"
            android:textColor="@color/color_button_foreground" />

        <Button
            android:text="D"
            android:id="@+id/key_d"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:background="@drawable/shape_round"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:backgroundTint="@color/color_button_background"
            android:textColor="@color/color_button_foreground" />

        <Button
            android:text="F"
            android:id="@+id/key_f"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:background="@drawable/shape_round"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:backgroundTint="@color/color_button_background"
            android:textColor="@color/color_button_foreground" />

        <Button
            android:text="G"
            android:id="@+id/key_g"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:background="@drawable/shape_round"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:backgroundTint="@color/color_button_background"
            android:textColor="@color/color_button_foreground" />

        <Button
            android:text="H"
            android:id="@+id/key_h"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:background="@drawable/shape_round"
