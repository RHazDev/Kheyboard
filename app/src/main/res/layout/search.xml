            android:layout_marginRight="2dp"
            android:backgroundTint="@color/color_button_background"
            android:textColor="@color/color_button_foreground" />

        <Button
            android:text="J"
            android:id="@+id/key_j"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:background="@drawable/shape_round"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:backgroundTint="@color/color_button_background"
            android:textColor="@color/color_button_foreground" />

        <Button
            android:text="K"
            android:id="@+id/key_k"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:background="@drawable/shape_round"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:backgroundTint="@color/color_button_background"
            android:textColor="@color/color_button_foreground" />

        <Button
            android:text="L"
            android:id="@+id/key_l"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:background="@drawable/shape_round"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:backgroundTint="@color/color_button_background"
            android:textColor="@color/color_button_foreground" />

        <Button
            android:text="M"
            android:id="@+id/key_m"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:background="@drawable/shape_round"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:backgroundTint="@color/color_button_background"
            android:textColor="@color/color_button_foreground" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/keybar1"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:text="W"
            android:id="@+id/key_w"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:background="@drawable/shape_round"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:backgroundTint="@color/color_button_background"
            android:textColor="@color/color_button_foreground" />

        <Button
            android:text="X"
            android:id="@+id/key_x"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:background="@drawable/shape_round"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:backgroundTint="@color/color_button_background"
            android:textColor="@color/color_button_foreground" />

        <Button
            android:text="C"
            android:id="@+id/key_c"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:background="@drawable/shape_round"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:backgroundTint="@color/color_button_background"
            android:textColor="@color/color_button_foreground" />

        <Button
            android:text="V"
            android:id="@+id/key_v"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:background="@drawable/shape_round"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:backgroundTint="@color/color_button_background"
            android:textColor="@color/color_button_foreground" />

        <Button
            android:text="B"
            android:id="@+id/key_b"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:background="@drawable/shape_round"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:backgroundTint="@color/color_button_background"
            android:textColor="@color/color_button_foreground" />

        <Button
            android:text="N"
            android:id="@+id/key_n"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:background="@drawable/shape_round"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:backgroundTint="@color/color_button_background"
            android:textColor="@color/color_button_foreground" />

        <ImageButton
            android:id="@+id/btn_space"
            android:layout_width="115dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/shape_round"
            android:backgroundTint="@color/color_button_background"
            android:tint="@color/color_button_foreground" />

        <ImageButton
            android:id="@+id/btn_backspace"
            android:tooltipText="Effacer"
            android:src="@drawable/ic_backspace"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/shape_round"
            android:backgroundTint="@color/color_button_background"
            android:tint="@color/color_button_foreground" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>